---
import { type SkillItem, projects } from "../utils";

interface Props {
  title: string;
}

const { title } = Astro.props;
const projectData = projects[title];
---

<article class="project">
  <h3 class="title">{title}</h3>
  <img
    class="project-image"
    src={projectData.imageUrl}
    alt={projectData.name}
  />
  <p class="description">{projectData.description}</p>
</article>

<style>
  .project {
    grid-column: span 6;
  }

  .title {
    font-size: 1.5rem;
    margin-bottom: 8px;
  }

  .project-image {
    margin-bottom: 8px;
  }

  .description {
    font-size: 1rem;
  }
</style>
