---
interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<div class="skill">
  <div class="skill-icon"><img class="skill-image" src={icon} /></div>
  <h4 class="name">{name}</h4>
</div>

<style>
  .skill {
    display: flex;
    flex-direction: column;
    width: 7rem;
    flex-grow: 0;
    flex-shrink: 0;
    align-items: center;
    justify-content: center;
  }

  .name {
    margin-top: 8px;
    font-weight: 300;
    font-size: 1.25rem;
  }

  .skill-icon {
    aspect-ratio: 1;
    height: auto;
    width: 70%;
    border-radius: 50%;
    padding: 12px;
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
</style>
