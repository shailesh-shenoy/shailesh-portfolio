---
interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<li class="skill">
  <div class="skill-icon"><img class="skill-image" src={icon} /></div>
  <h4 class="name">{name}</h4>
</li>

<style>
  .skill {
    display: flex;
    flex-direction: column;

    align-items: center;
    justify-content: center;
    opacity: 0.8;
    transition: opacity 0.15s ease-in-out;
  }

  .skill:hover {
    opacity: 1;
  }

  .name {
    margin-top: 8px;
    font-family: var(--font-display);
    font-weight: 100;
    font-size: 1rem;
  }

  .skill-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    aspect-ratio: 1;
    height: auto;
    width: 60px;
    border-radius: 50%;
    padding: 10px;
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .skill-image {
    width: 48px;
    height: auto;
  }

