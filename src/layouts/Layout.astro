---
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
    />

    <link
      href="https://fonts.cdnfonts.com/css/helvetica-neue-5?styles=103510,103506,103508,103502"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="sidebar-layout">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style></style>

<style is:global>
  /*
  1. Use a more-intuitive box-sizing model.
*/
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  /*
  2. Remove default margin
*/
  * {
    margin: 0;
  }
  /*
  Typographic tweaks!
  3. Add accessible line-height
  4. Improve text rendering
*/
  html,
  body {
    width: 100%;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;

    background: var(--color-bg-primary);
    color: var(--color-primary);
    font-family: var(--font-body);
    font-weight: 300;
  }
  /*
  5. Improve media defaults
*/
  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }
  /*
  6. Remove built-in form typography styles
*/
  input,
  button,
  textarea,
  select {
    font: inherit;
  }
  /*
  7. Avoid text overflows
*/
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
    font: inherit;
  }
  /*
  8. Create a root stacking context
*/
  #root,
  #__next {
    isolation: isolate;
  }

  /*
  9. Remove default list styles
*/
  ul,
  ol {
    list-style: none;
    padding: 0;
  }
  /*
  10. Remove default button styles
*/
  button {
    background: none;
    border: none;
    padding: 0;
  }
  /*
  11. Remove default link styles
  */

  a {
    color: inherit;
    text-decoration: none;
  }

  /* Define custom properties for colors */
  :root {
    --color-bg-primary: #070f1d;
    --color-bg-secondary: #d9d9d9;

    --color-primary: #dcdcdc;
    --color-secondary: #f5f5f5;
    --color-green: #9eff7c;
    --color-red: #ff7c7c;
    --color-blue: #1570ef;
    --color-yellow: #fcf194;
    --color-black: #0d1117;
    --color-white: #ffffff;

    --font-display: "Helvetica Neue", sans-serif;
    --font-body: "Helvetica Neue", sans-serif;
  }

  .sidebar-layout {
    display: flex;
  }
</style>
